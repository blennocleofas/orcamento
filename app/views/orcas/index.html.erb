<div class="row">
<div class="small-12 columns">	
	<div class="tt">
		<h4><i class="fa fa-cogs"></i> Gerenciar Orçamentos</h4>
	</div>
</div>

<div class="small-12 columns">	
<table>
	<thead>
		<tr>
			<th>ID</th>
			<th width='300px' >Titulo</th>
			<th width='300px'>Cliente</th>
			<th>Voos</th>
			<th>Hoteis</th>
			<th>Link</th>
			<th>Apagar</th>
		</tr>
	</thead>
	<tbody>
		<% @orcamento.each do |orcamento|%>
		<tr>
			<td><%= orcamento.id %></td>
			<td> <%= orcamento.titulo %> </td>
			<% if orcamento.clientes.first.present? %>
				<td><%= orcamento.clientes.first.nome_completo %></td>
			<% else %>
				<td> Desconhecido </td>
			<% end %>										
			<td><%= orcamento.aereos.count %></td>
			<td><%= orcamento.hotels.count %></td>
			<td>
				<%= link_to "Visualizar", orca_path(orcamento) %> | <%= link_to "Editar", edit_orca_path(orcamento) %>
			</td>
			<td>

				<%= link_to 'Apagar', orca_path(orcamento),
                    method: :delete, data: { confirm: "Tem certeza que deseja apagar o orçamento #{orcamento.titulo}" } %></td>
		</tr>
		<% end %>
	</tbody>
</table>
</div>
<div class="small-12 columns">	
</div>
</div>